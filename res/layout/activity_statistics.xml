<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.troyamurphy.remindme.StatisticsActivity" >

    <TextView
        android:id="@+id/ToDoChecked"
        android:layout_column="0"
        android:layout_row="0"
        android:text="ToDoChecked"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ToDoCheckedCount"
        android:layout_column="1"
        android:layout_row="0"
        android:text="ToDoCheckedCount"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/ToDoUnchecked"
        android:layout_column="0"
        android:layout_row="1"
        android:text="ToDoUnchecked"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ToDoUncheckedCount"
        android:layout_column="1"
        android:layout_row="1"
        android:text="ToDoUncheckedCount"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/Archived"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="Archived"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ArchivedCount"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="ArchivedCount"
        android:textAppearance="?android:attr/textAppearanceLarge" />
	<TextView
        android:id="@+id/ArchivedChecked"
        android:layout_column="0"
        android:layout_row="3"
        android:text="ArchivedChecked"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ArchivedCheckedCount"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:text="ArchivedCheckedCount"
        android:textAppearance="?android:attr/textAppearanceLarge" />
   	<TextView
        android:id="@+id/ArchivedUnchecked"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:text="ArchivedUnchecked"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ArchivedUncheckedCount"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:text="ArchivedUncheckedCount"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</GridLayout>